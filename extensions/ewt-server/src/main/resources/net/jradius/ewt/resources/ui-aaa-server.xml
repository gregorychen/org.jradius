<!DOCTYPE CAP-UI SYSTEM "/etc/coova/cap-ui.dtd">
<cap-ui>
  <menu name="Server">
    <menu name="Interfaces">
      <inputset name="Network Interfaces" object="radiusd.server.listen" singleton="false">
	<input label="Type" key="type" value="radius">
	  <option name="Disabled" value="off"/>
	  <option name="RADIUS" value="radius"/>
	  <option name="DHCP" value="dhcp"/>
	  <dependency value="off" change="listen:broadcast" visible="false" />
	  <dependency value="off" change="listen:ip" visible="false" />
	  <dependency value="off" change="listen:port" visible="false" />
	  <dependency value="off" change="listen:int" visible="false" />
	  <dependency value="dhcp" change="listen:broadcast" visible="true" />
        </input>
	<input label="Interface" ref="status.host.interface" param="listen:int" key="interface"></input>
	<input label="IP Address" param="listen:ip" key="ip" dtype="ip"></input>
	<input label="Broadcast" key="broadcast" type="check" param="listen:broadcast">
	  <option name="Enabled" value="on"/>
	  <dependency value="on" change="listen:ip" visible="false" />
        </input>
	<input label="Port" param="listen:port" key="port" dtype="int"></input>
        <help label="About Network Interfaces" id="aaaInterfaces"/>
      </inputset>
    </menu>
    <menu name="Virtual Servers">
      <inputset name="Virtual Servers" object="radiusd.server.virtual" singleton="false">
	<input label="Name" key="id" dtype="word"></input>
	<input label="Authorize" type="varlist" service="radiusd-modules" def="[Add]" key="authorize" delim=" "></input>
        <help label="About Virtual Servers" id="aaaVirtualServers"/>
      </inputset>
    </menu>
    <menu name="Clients">
      <inputset name="RADIUS Clients" object="radiusd.client" singleton="false">
	<input label="Name" key="id" dtype="word" required="true"></input>
	<input label="CIDR IP Address" key="ip" dtype="cidr" required="true"></input>
	<input label="Shared Secret" key="shared_secret" required="true"></input>
        <help label="About RADIUS Clients" id="aaaClients"/>
      </inputset>
    </menu>
    <menu name="System">
      <inputset name="System Settings" object="radiusd.server">
	<input label="Configuration Directory" key="raddbdir"></input>
	<input label="Installation Prefix" key="exec_prefix"></input>
	<input label="SBIN Directory" key="sbindir"></input>
	<input label="State Directory" key="localstatedir"></input>
	<input label="Log Directory" key="logdir"></input>
	<input label="Library Directory" key="libdir"></input>
	<input label="Accounting Directory" key="radacctdir"></input>
	<input label="RadCheck Path" key="checkrad"></input>
	<input label="PID File" key="pidfile"></input>
	<input label="Server User" key="user" dtype="word"></input>
	<input label="Server Group" key="group" dtype="word"></input>
        <help label="About System Settings" id="aaaSettings"/>
      </inputset>
      <inputset name="Security Settings" object="radiusd.server.security">
	<input label="Max Attributes" key="max_attributes" dtype="int"></input>
	<input label="Reject Delay" key="reject_delay" dtype="int"></input>
	<input label="Status Server" type="check" key="status_server">
	  <option name="Enabled" value="on"/>
	</input>
        <help label="About Security Settings" id="aaaSecurity"/>
      </inputset>
      <inputset name="Log Settings" object="radiusd.server">
	<input label="Filename" key="logfile"></input>
	<input label="Log authentication" type="check" key="log_auth">
	  <option name="Enabled" value="on"/>
	  <dependency value="on" change="badpass" />
	  <dependency value="on" change="goodpass" />
	</input>
	<input label="Log bad passwords" param="badpass" type="check" key="log_auth_badpass">
	  <option name="Enabled" value="on"/>
	</input>
	<input label="Log good passwords" param="goodpass" type="check" key="log_auth_goodpass">
	  <option name="Enabled" value="on"/>
	</input>
        <help label="About Log Settings" id="aaaLog"/>
      </inputset>
    </menu>
    <menu name="Settings">
      <inputset name="Thread Settings" object="radiusd.server.thread">
	<input label="Start Servers" key="start_servers" dtype="int"></input>
	<input label="Max Servers" key="max_servers" dtype="int"></input>
	<input label="Min Spares" key="min_spare_servers" dtype="int"></input>
	<input label="Max Spares" key="max_spare_servers" dtype="int"></input>
	<input label="Max Requests" key="max_requests_per_server" dtype="int"></input>
        <help label="About Thread Settings" id="aaaThread"/>
      </inputset>
      <inputset name="SNMP Settings" param="snmp" object="radiusd.server.snmp">
	<input label="Enabled" type="check" value="yes" key="enabled">
	  <dependency value="yes" change="snmp:pwd" />
	  <dependency value="yes" change="snmp:wr" />
	</input>
	<input label="SMUX Password" param="snmp:pwd" key="smux_password"/>
	<input label="SMUX Write Access" param="snmp:wr" type="check"  key="snmp_write_access">
	  <option name="Yes" value="yes"/>
	</input>
        <help label="About SNMP Settings" id="aaaSNMP"/>
      </inputset>
      <inputset name="Other Settings" object="radiusd.server">
	<input label="Max Request Time" key="max_request_time" dtype="int"></input>
	<input label="Cleanup Delay Time" key="cleanup_delay" dtype="int"></input>
	<input label="Max Requests" key="max_requests" dtype="int"></input>
	<input label="Debug Level" key="debug_level" dtype="int"></input>
	<input label="Delete Blocked Requests" type="check" key="delete_blocked_requests">
	  <option name="Enabled" value="on"/>
	</input>
	<input label="Proxy Requests" type="check" key="proxy_requests">
	  <option name="Enabled" value="on"/>
	</input>
	<input label="Hostname Lookups" type="check" key="hostname_lookups">
	  <option name="Enabled" value="on"/>
	</input>
	<input label="Allow Core Dump" type="check" key="allow_core_dumps">
	  <option name="Enabled" value="on"/>
	</input>
        <help label="About Other Settings" id="aaaOther"/>
      </inputset>
    </menu>
  </menu>
</cap-ui>

