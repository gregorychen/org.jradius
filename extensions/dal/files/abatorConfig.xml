<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE abatorConfiguration
  PUBLIC "-//Apache Software Foundation//DTD Abator for iBATIS Configuration 1.0//EN"
  "http://ibatis.apache.org/dtd/abator-config_1_0.dtd">

<abatorConfiguration>
  <abatorContext id="MySQL2Tables" generatorSet="Java5">

    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
        connectionURL="jdbc:mysql://localhost/radius"
        userId="radius"
        password="radius">
    </jdbcConnection>

    <javaTypeResolver >
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>

    <javaModelGenerator type="net.jradius.db.JavaModelGenerator" 
                        targetPackage="net.jradius.dal.model" targetProject="src/main/java">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

    <sqlMapGenerator type="net.jradius.db.SqlMapGenerator" 
                     targetPackage="net.jradius.dal.xml"  targetProject="src/main/resources">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

    <daoGenerator type="net.jradius.db.JavaDAOGenerator" 
    			  targetPackage="net.jradius.dal.dao"  targetProject="src/main/java">
      <property name="enableSubPackages" value="true" />
      <!--property name="rootInterface" value="DAO" /-->
    </daoGenerator>

    <table tableName="nas" domainObjectName="NAS" >
      <generatedKey column="ID" sqlStatement="MySQL" identity="true" />
    </table>

    <table tableName="radacct" domainObjectName="RadAcct" >
      <generatedKey column="ID" sqlStatement="MySQL" identity="true" />
    </table>

    <table tableName="radcheck" domainObjectName="RadCheck" >
      <generatedKey column="ID" sqlStatement="MySQL" identity="true" />
    </table>

    <table tableName="radgroupcheck" domainObjectName="RadGroupCheck" >
      <generatedKey column="ID" sqlStatement="MySQL" identity="true" />
    </table>

    <table tableName="radgroupreply" domainObjectName="RadGroupReply" >
      <generatedKey column="ID" sqlStatement="MySQL" identity="true" />
    </table>

    <table tableName="radippool" domainObjectName="RadIPPool" >
      <generatedKey column="ID" sqlStatement="MySQL" identity="true" />
    </table>

    <table tableName="radpostauth" domainObjectName="RadPostAuth" >
      <generatedKey column="ID" sqlStatement="MySQL" identity="true" />
    </table>

    <table tableName="radreply" domainObjectName="RadReply" >
      <generatedKey column="ID" sqlStatement="MySQL" identity="true" />
    </table>

    <table tableName="radusergroup" domainObjectName="RadUserGroup" >
      <generatedKey column="ID" sqlStatement="MySQL" identity="true" />
    </table>

    <table tableName="uihelp" domainObjectName="UIHelp" >
      <generatedKey column="ID" sqlStatement="MySQL" identity="true" />
      <columnOverride column="helptext" jdbcType="VARCHAR" />
    </table>

      <!--  columnOverride column="DATE_FIELD" property="startDate" /  >
      <     ignoreColumn column="FRED" /  -->

  </abatorContext>
</abatorConfiguration>
