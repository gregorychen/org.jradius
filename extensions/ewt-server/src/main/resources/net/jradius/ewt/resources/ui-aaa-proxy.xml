<!DOCTYPE CAP-UI SYSTEM "/etc/coova/cap-ui.dtd">
<cap-ui>
  <menu name="Proxy">
    <menu name="Realms">
      <inputset name="Proxy Realms" object="radiusd.proxy.realm" singleton="false">
	<!--input label="Common Name" key="id" dtype="word" required="true"/-->
	<input label="Realm Name" key="name" required="true"/>
	<input label="Use Pools" key="pools" value="no">
	  <option name="No" value="no"/>
	  <option name="Yes" value="yes"/>
	  <dependency value="yes" change="authpool" />
	  <dependency value="yes" change="acctpool" />
	  <dependency value="yes" change="authhost" visible="false" />
	  <dependency value="yes" change="accthost" visible="false" />
	</input>
        <inputset singleton="true">
	  <input label="Auth Pool" ref="radiusd.proxy.pool" param="authpool" key="authpool"></input>
	  <input label="Acct Pool" ref="radiusd.proxy.pool" param="acctpool" key="acctpool"></input>
  	  <input label="Auth Host" param="authhost" key="authhost"></input>
	  <input label="Acct Host" param="accthost" key="accthost"></input>
	  <input label="Shared Secret" key="secret"></input>
	  <input label="Strip Realm" type="check" key="strip">
	    <option name="Enabled" value="yes"/>
	  </input>
        </inputset>
        <help label="About Proxy Realms" id="aaaProxyRealm"/>
      </inputset>
    </menu>
    <menu name="Pools">
      <inputset name="Server Pools" object="radiusd.proxy.pool" singleton="false">
	<input label="Name" key="id" dtype="word" required="true"/>
	<input label="Type" key="type">
	  <option name="Fail Over" value="fail-over"/>
	  <option name="Load Balance" value="load-balance"/>
	  <option name="Client Balance" value="client-balance"/>
	  <option name="Client Port Balance" value="client-port-balance"/>
	  <option name="Keyed Balance" value="keyed-balance"/>
	</input>
	<input label="Home Servers" ref="radiusd.proxy.server" type="varlist" def="[Add]" key="servers" delim=" "></input>
        <help label="About Server Pools" id="aaaServerPool"/>
      </inputset>
    </menu>
    <menu name="Servers">
      <inputset name="Home Servers" object="radiusd.proxy.server" singleton="false">
	<input label="Name" key="id" dtype="word" required="true"/>
	<input label="Type" key="type">
	  <option name="Auth &amp; Acct" value="auth+acct"/>
	  <option name="Auth Only" value="auth"/>
	  <option name="Acct Only" value="acct"/>
	</input>
	<input label="IPv4 Address" key="ipaddr" dtype="ip"/>
	<input label="IPv6 Address" key="ipv6addr"/>
	<input label="Port" key="port" dtype="int"/>
	<inputset singleton="true">
	  <input label="Shared Secret" key="secret"/>
	  <input label="Response Window" key="response_window" dtype="int"/>
	  <input label="Max Outstanding" key="max_outstanding" dtype="int"/>
	  <input label="Zombie Period" key="zombie_period" dtype="int"/>
	  <input label="Ping Check" key="ping_check" dtype="int"/>
	  <input label="Ping Interval" key="ping_interval" dtype="int"/>
	  <input label="Ping Username" key="username"/>
	  <input label="Ping Password" key="password"/>
	  <input label="Status Check" key="status_check" dtype="int"/>
	  <input label="Check Interval" key="check_interval" dtype="int"/>
	  <input label="Check Timeout" key="status_check_timeout" dtype="int"/>
	  <input label="Num Answers for Alive" key="num_answers_to_alive" dtype="int"/>
	  <input label="Num Pings for Alive" key="num_pings_to_alive" dtype="int"/>
	  <input label="Revive Interval" key="revive_interval" dtype="int"/>
	</inputset>
        <help label="About Home Servers" id="aaaHomeServer"/>
      </inputset>
    </menu>
    <menu name="Settings">
      <inputset name="Proxy Settings" object="radiusd.proxy">
	<input label="Retry Delay" key="retry_delay" dtype="int"/>
	<input label="Retry Count" key="retry_count" dtype="int"/>
	<input label="Dead Count" key="dead_time" dtype="int"/>
	<input label="Default Fallback" type="check" key="default_fallback">
	  <option name="Enabled" value="yes"/>
	</input>
	<input label="Wake all on dead" type="check" key="wake_all_if_all_dead">
	  <option name="Enabled" value="yes"/>
	</input>
        <help label="About Proxy Settings" id="aaaProxy"/>
      </inputset>
    </menu>
  </menu>
</cap-ui>

